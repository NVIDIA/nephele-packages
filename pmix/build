mounts() {
    echo "$(dirname $0)/.. /mnt bind,x-create=dir"
}

environ() {
    echo "SHELL=/bin/bash"
    echo "LANG=C.UTF-8"
    echo "DEB_BUILD_OPTIONS='parallel=$(nproc)'"
}

rc() {
    set -eux

    apt-get -y update && apt-get -y install --no-install-recommends \
        ca-certificates \
        devscripts      \
        fakeroot        \
        gnupg2

    mkdir -p /usr/local/src/pmix && cd /usr/local/src/pmix

    echo 'deb-src http://old-releases.ubuntu.com/ubuntu disco universe' > /etc/apt/sources.list.d/disco.list
    apt-get -y update && apt-get -y build-dep pmix
    apt-get -y source pmix

    cd pmix*/ && debuild -us -uc -G -i -tc

    cd ..
    cp *.orig.tar.* *.debian.tar.* *.dsc *.deb /mnt
}
